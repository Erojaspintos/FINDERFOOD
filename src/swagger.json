{
  "openapi": "3.1.0",
  "info": {
    "title": "FinderFood API",
    "version": "1.0.0",
    "description": "API REST para encontrar y reseñar lugares seguros para personas con restricciones alimentarias."
  },
  "servers": [
    {
      "url": "http://localhost:3001",
      "description": "Servidor de desarrollo"
    },
    {
      "url": "https://finderfood-nu.vercel.app",
      "description": "Servidor de producción"
    }
  ],
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Site": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "La Comedia"
          },
          "country": {
            "type": "string",
            "example": "Argentina"
          },
          "state": {
            "type": "string",
            "example": "Buenos Aires"
          },
          "city": {
            "type": "string",
            "example": "Rosario"
          },
          "address": {
            "type": "string",
            "example": "Calle Córdoba 1234"
          },
          "description": {
            "type": "string",
            "example": "Opciones vegetarianas y sin TACC"
          },
          "type": {
            "type": "number",
            "example": 1
          },
          "latitude": {
            "type": "number",
            "example": -34.6037
          },
          "longitude": {
            "type": "number",
            "example": -58.3816
          }
        },
        "required": [
          "name",
          "country",
          "state",
          "city",
          "description",
          "type",
          "latitude",
          "longitude"
        ]
      },
      "Review": {
        "type": "object",
        "properties": {
          "comment": {
            "type": "string",
            "example": "Excelente lugar."
          },
          "stars": {
            "type": "number",
            "minimum": 1,
            "maximum": 5,
            "example": 5
          }
        },
        "required": [
          "comment",
          "stars"
        ]
      },
      "User": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Emilia"
          },
          "email": {
            "type": "string",
            "example": "emi@example.com"
          },
          "password": {
            "type": "string",
            "example": "password123"
          },
          "foodPreferences": {
            "type": "array",
            "items": {
              "type": "number"
            },
            "example": [
              1,
              2
            ]
          },
          "role": {
            "type": "string",
            "example": "usuario_consumidor",
            "enum": [
              "admin",
              "usuario_consumidor",
              "usuario_restaurant",
              "usuario_vendedor"
            ]
          }
        },
        "required": [
          "name",
          "email",
          "password",
          "foodPreferences",
          "role"
        ]
      }
    }
  },
  "paths": {
    "/public/sites": {
      "get": {
        "summary": "Obtener todos los sitios con filtros opcionales",
        "description": "Devuelve una lista de sitios públicos o personalizados según el token. Se puede filtrar por nombre y distancia desde una ubicación.",
        "security": [],
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "description": "Nombre del sitio (búsqueda parcial)",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "country",
            "in": "query",
            "description": "Pais",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "state",
            "in": "query",
            "description": "Estado",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "city",
            "in": "query",
            "description": "Ciudad",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "address",
            "in": "query",
            "description": "Direccion",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "description",
            "in": "query",
            "description": "Descripcion",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "type",
            "in": "query",
            "description": "Tipo",
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "distance",
            "in": "query",
            "description": "Distancia máxima en metros",
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "startLat",
            "in": "query",
            "description": "Latitud",
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "startLong",
            "in": "query",
            "description": "Longitud",
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de sitios encontrados",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Site"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error al obtener los Sitios"
          }
        }
      }
    },
    "/v1/sites": {
      "post": {
        "summary": "Crear un nuevo sitio",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Site"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Sitio creado."
          },
          "409": {
            "description": "Ya existe un sitio con ese nombre y ubicación."
          },
          "500": {
            "description": "Error al crear el sitio."
          }
        }
      }
    },
    "/public/sites/{id}": {
      "get": {
        "summary": "Obtener sitio por ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Sitio encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Site"
                }
              }
            }
          },
          "404": {
            "description": "No encontrado"
          }
        }
      },
      "put": {
        "summary": "Actualizar sitio",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Site"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Sitio actualizado"
          },
          "404": {
            "description": "No encontrado"
          }
        }
      },
      "delete": {
        "summary": "Eliminar sitio",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Sitio eliminado"
          },
          "403": {
            "description": "Sin permisos"
          },
          "404": {
            "description": "No encontrado"
          }
        }
      }
    },
    "/sites/{id}/reviews": {
      "post": {
        "summary": "Agregar reseña al sitio",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Review"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Reseña creada"
          },
          "404": {
            "description": "Sitio no encontrado"
          },
          "409": {
            "description": "Reseña ya existente"
          }
        }
      }
    },
    "/sites/{id}/reviews/{reviewId}": {
      "put": {
        "summary": "Editar reseña",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "reviewId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Review"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Reseña actualizada"
          },
          "403": {
            "description": "No autorizado"
          },
          "404": {
            "description": "No encontrada"
          }
        }
      },
      "delete": {
        "summary": "Eliminar reseña",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "reviewId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Reseña eliminada"
          },
          "403": {
            "description": "Sin permisos"
          },
          "404": {
            "description": "No encontrada"
          }
        }
      }
    },
    "/users/register": {
      "post": {
        "summary": "Registro de usuario",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuario registrado"
          },
          "400": {
            "description": "Datos inválidos"
          }
        }
      }
    },
    "/users/login": {
      "post": {
        "summary": "Login de usuario",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "emi@example.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "password123"
                  }
                },
                "required": [
                  "email",
                  "password"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login exitoso con token"
          },
          "401": {
            "description": "Credenciales inválidas"
          }
        }
      }
    }
  }
}